<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a new avatar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998">

        <ImageView
            android:id="@+id/flagid00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src="@drawable/flag_00" />

        <ImageView
            android:id="@+id/flagid01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src="@drawable/flag_01" />

        <ImageView
            android:id="@+id/flagid02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src="@drawable/flag_02" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53">

        <ImageView
            android:id="@+id/flagid03"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src="@drawable/flag_03" />

        <ImageView
            android:id="@+id/flagid04"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src = "@drawable/flag_04"
            />

        <ImageView
            android:id="@+id/flagid05"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src = "@drawable/flag_05"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

        <ImageView
            android:id="@+id/flagid06"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src = "@drawable/flag_06"
            />

        <ImageView
            android:id="@+id/flagid07"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src = "@drawable/flag_07"
            />

        <ImageView
            android:id="@+id/flagid08"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="SetTeamIcon"
            android:src = "@drawable/flag_08"
            />

    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>